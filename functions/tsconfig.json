{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "target": "es2017"
  },
  "compileOnSave": true,
  "include": ["src"]
}
